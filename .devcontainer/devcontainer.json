{
  "name": "NUCLEA",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    }
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "updateContentCommand": "npm install",
  "postAttachCommand": {
    "server": "npm run dev -- -H 0.0.0.0"
  },
  "portsAttributes": {
    "3000": {
      "label": "NUCLEA App",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    3000
  ]
}
